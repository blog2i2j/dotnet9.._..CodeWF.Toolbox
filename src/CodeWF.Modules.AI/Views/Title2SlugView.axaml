<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:vm="clr-namespace:CodeWF.Modules.AI.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:DataType="vm:Title2SlugViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeWF.Modules.AI.Views.Title2SlugView">
    <Design.DataContext>
		<vm:Title2SlugViewModel />
    </Design.DataContext>
    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="MinHeight" Value="500" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
    </UserControl.Styles>
    <Grid ColumnDefinitions="* *" RowDefinitions="35 *" VerticalAlignment="Top">
        <Button Content="Convert" Command="{Binding RaiseConvertCommandHandler}"></Button>
        <TextBox Text="{Binding AskContent}" Grid.Row="1" Grid.Column="0" />
        <TextBox Text="{Binding ResponseContent}" Grid.Row="1" Grid.Column="1" />
    </Grid>
</UserControl>