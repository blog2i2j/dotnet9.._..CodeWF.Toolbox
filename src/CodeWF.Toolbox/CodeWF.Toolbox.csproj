<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<LangVersion>latest</LangVersion>
		<AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
	</PropertyGroup>

	<ItemGroup>
		<AvaloniaResource Include="Assets\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Avalonia" Version="11.1.1" />
		<!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
		<PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.1.1" />
		<PackageReference Include="Semi.Avalonia" Version="11.1.0" />
		<PackageReference Include="Irihi.Ursa" Version="1.0.0" />
		<PackageReference Include="Irihi.Ursa.PrismExtension" Version="1.0.0" />
		<PackageReference Include="Irihi.Ursa.Themes.Semi" Version="1.0.0" />
		<PackageReference Include="Prism.Avalonia" Version="8.1.97.11072" />
		<PackageReference Include="Prism.DryIoc.Avalonia" Version="8.1.97.11072" />
		<PackageReference Include="Avalonia.ReactiveUI" Version="11.1.1" />
	</ItemGroup>
</Project>