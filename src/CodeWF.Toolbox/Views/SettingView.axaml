<UserControl
    x:Class="CodeWF.Toolbox.Views.SettingView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:CodeWF.Core;assembly=CodeWF.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i18n="https://codewf.com"
    xmlns:language="clr-namespace:CodeWF.Toolbox.I18n"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:CodeWF.Toolbox.ViewModels"
    Width="500"
    Height="350"
    d:DesignHeight="350"
    d:DesignWidth="500"
    mc:Ignorable="d"
    x:DataType="vm:SettingViewModel">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:SettingViewModel />
    </Design.DataContext>
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0 0 10 0" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style Selector="ToggleSwitch">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>
    <StackPanel VerticalAlignment="Top">
        <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            Classes="Tertiary H5"
            Text="{i18n:I18n {x:Static language:Language.InterfaceStyleSettings}}"
            Theme="{StaticResource TitleTextBlock}" />
        <TabControl TabStripPlacement="Top">
            <TabItem Header="{i18n:I18n {x:Static language:Language.GeneralSettings}}">
                <Grid
                    Margin="0,30,0,0"
                    ColumnDefinitions="220 *"
                    RowDefinitions="70 70 50 50 *">
                    <TextBlock Text="{i18n:I18n {x:Static language:Language.Theme}}" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        PlaceholderText="Select a theme"
                        DisplayMemberBinding="{Binding Name}"
                        ItemsSource="{Binding Themes}"
                        SelectedItem="{Binding SelectedTheme}" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{i18n:I18n {x:Static language:Language.LanguageKey}}" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        PlaceholderText="Select a language"
                        DisplayMemberBinding="{Binding Name}"
                        ItemsSource="{Binding Languages}"
                        SelectedItem="{Binding SelectedLanguage}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="{i18n:I18n {x:Static language:Language.AutoOpenToolboxAtStartup}}" />
                    <ToggleSwitch
                        Grid.Row="2"
                        Grid.Column="1"
                        OffContent="{i18n:I18n {x:Static language:Language.TurnOff}}"
                        OnContent="{i18n:I18n {x:Static language:Language.TurnOn}}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="{i18n:I18n {x:Static language:Language.HideTrayIconOnClose}}" />
                    <ToggleSwitch
                        Grid.Row="3"
                        Grid.Column="1"
                        OffContent="{i18n:I18n {x:Static language:Language.TurnOff}}"
                        OnContent="{i18n:I18n {x:Static language:Language.TurnOn}}" />
                </Grid>
            </TabItem>
        </TabControl>
    </StackPanel>
</UserControl>