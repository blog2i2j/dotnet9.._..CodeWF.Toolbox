<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeWF.Toolbox.SettingView">
  <StackPanel VerticalAlignment="Top">
      <TextBlock Text="界面风格设置" HorizontalAlignment="Center" Classes="Tertiary H5"
                 Theme="{StaticResource TitleTextBlock}" Margin="0 10 0 30" />
      <TabControl TabStripPlacement="Top">
          <TabItem Header="通用设置">
            <Grid ColumnDefinitions="Auto *" RowDefinitions="30 30 30 *">
                <TextBlock Text="主题"/>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
					<RadioButton Content="跟随系统" />
					<RadioButton Content="黑夜模式" />
                    <RadioButton Content="白天模式" />
                </StackPanel>

                <TextBlock Text="开机时自动打开工具箱" Grid.Row="1" Grid.Column="0"/>
                <CheckBox Grid.Row="1" Grid.Column="1" Content="开启|关闭"/>

                <TextBlock Text="关闭窗体时隐藏托盘图标" Grid.Row="2" Grid.Column="0"/>
                <CheckBox Grid.Row="2" Grid.Column="1" Content="开启|关闭"/>
            </Grid>
          </TabItem>
      </TabControl>
  </StackPanel>
</UserControl>
