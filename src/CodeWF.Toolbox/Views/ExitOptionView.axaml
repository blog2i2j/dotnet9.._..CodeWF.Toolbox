<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CodeWF.Toolbox.ViewModels"
             x:DataType="vm:ExitOptionViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeWF.Toolbox.Views.ExitOptionView">
    <Grid RowDefinitions="30 *">
        <TextBlock Text="{Binding Message}" />
        <CheckBox IsChecked="{Binding Option}" 
                  Content="{Binding OptionContent,Mode=OneWay}" Grid.Row="1" />
    </Grid>
</UserControl>