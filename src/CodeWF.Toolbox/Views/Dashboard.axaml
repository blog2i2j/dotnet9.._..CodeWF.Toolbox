<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeWF.Toolbox.Views.Dashboard">
    <UserControl.Styles>
        <Style Selector="Border.ToolItem">
            <Setter Property="Margin" Value="7" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
        <Style Selector="Image.ToolItem">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0 0 0 20" />
        </Style>
    </UserControl.Styles>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="码界工坊 工具箱" HorizontalAlignment="Center" Classes="H1"
                   Theme="{StaticResource TitleTextBlock}" />
        <TextBlock Text="想要的都有，没有请告知" HorizontalAlignment="Center" Classes="Tertiary H5"
                   Theme="{StaticResource TitleTextBlock}" Margin="0 10 0 30" />
        <StackPanel Orientation="Horizontal">
            <Button Content="访问在线工具箱" HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Classes="Success" Theme="{DynamicResource BorderlessButton}"
                    Height="40" Width="180" CornerRadius="5"
                    Click="OpenOnLineToolbox" />
            <Button Content="没有我要的工具..." HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Classes="Warning" Theme="{DynamicResource BorderlessButton}"
                    Height="40" Width="180" CornerRadius="5"
                    Click="OpenRepository" />
        </StackPanel>
    </StackPanel>
</UserControl>