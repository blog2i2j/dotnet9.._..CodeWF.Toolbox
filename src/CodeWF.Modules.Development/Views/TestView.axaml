<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i18n="https://codewf.com"
             xmlns:language="clr-namespace:CodeWF.Modules.Development.I18n"
             xmlns:vm="clr-namespace:CodeWF.Modules.Development.ViewModels"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:DataType="vm:TestViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CodeWF.Modules.Development.Views.TestView">
	<Design.DataContext>
        <vm:TestViewModel />
    </Design.DataContext>
    <WrapPanel>
      <Button Content="{i18n:I18n {x:Static language:Language.CompressFiles}}" Command="{Binding RaiseCompressCommand}" />
      <Button Content="{i18n:I18n {x:Static language:Language.DecompressionFiles}}" Command="{Binding RaiseDecompressionCommand}" Margin="10 0" />
      <TextBlock Text="{Binding CurrentTime}" VerticalAlignment="Center" />
      <TextBlock Text="{Binding DailyTimeTask}" VerticalAlignment="Center" />
  </WrapPanel>
</UserControl>
